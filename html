<script type="text/worker">

    
    //button to change character sheet tab
    const buttonlist = ["character","journal","powers"];
    buttonlist.forEach(button => {
        on(`clicked:${button}`, function() {
            setAttrs({
                sheetTab: button
            });
        });
    });
    
    //MOTHERFUCKER LETS DO SOME MATH
//adjust attributes to d100 values

//when any attribute changes
on("change:strength change:skill change:speed change:sight change:suave change:speed change:spirit change:melee change:ranged change:thrown change:psychic change:unarmed change:tech change:dodge change:block change:healing change:sneaks change:lockpick change:steal change:traps change:investigate change:science change:tech change:survival change:insight change:charm change:deceive change:intimidate change:barter change:inspire change:perform change:persuade", function() {
    //get the attributes
    getAttrs([
        "strength",
        "skill",
        "smarts",
        "sight",
        "suave",
        "speed",
        "spirit",
        "melee",
        "ranged",
        "thrown",
        "psychic",
        "unarmed",
        "tech",
        "dodge",
        "block",
        "healing",
        "sneak",
        "lockpick",
        "steal",
        "traps",
        "investigate",
        "science",
        "survival",
        "insight",
        "charm",
        "deceive",
        "intimidate",
        "barter",
        "inspire",
        "perform"
        ], function(values){
            let strength = parseInt(values.strength)||0;
            let skill = parseInt(values.skill)||0;
            let smarts = parseInt(values.smarts)||0;
            let sight = parseInt(values.sight)||0;
            let suave = parseInt(values.suave)||0;
            let speed = parseInt(values.speed)||0;
            let spirit = parseInt(values.spirit)||0;


    
    //multiply each attribute by 10 and set them to adjusted attributes
    setAttrs({
        adjStrength: strength * 10,
        adjSkill: skill * 10,
        adjSpeed: speed * 10,
        adjSight: sight * 10,
        adjSuave: suave * 10,
        adjSpirit: spirit * 10,
        adjSmarts: smarts * 10,
        meleemod: Math.floor(melee/10),
        rangedmod: Math.floor(ranged/10),
        thrownmod: Math.floor(thrown/10),
        psychicmod: Math.floor(psychic/10),
        unarmedmod: Math.floor(unarmed/10),
        techmod: Math.floor(tech/10)

            });
        });
    });
    
</script>

